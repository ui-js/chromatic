  <meta name="theme-color" content="#fafafa">
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
      --monospace-font: "Source Code", "Plex", "Fira Code", Consolas, "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Liberation Mono", "Nimbus Mono L", Monaco, "Courier New", Courier, monospace;
    }

    .color-chips {
      display: flex;
      flex-wrap: wrap;
    }

    .color-chip {
      position: relative;
      width: 200px;
      margin: 20px;
    }

    .color-chip__swatch {
      border-radius: 8px;
      padding: 8px;
      position: absolute;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      color: #fff
    }

    .color-chip__swatch h3,
    .color-chip__swatch h4 {
      padding: 0;
      margin: 0;
      margin-left: -8px;
      margin-right: -8px;
      padding-left: 16px;
      padding-bottom: 4px;
      overflow-wrap: break-word;
    }

    .color-chip__swatch h3 {
      font-size: 1.2rem;
      font-weight: 700;
      opacity: .8;
    }

    .color-chip__swatch h4 {
      font-size: 1rem;
      font-weight: normal;
      margin-bottom: 1.2rem;
      font-family: var(--monospace-font);
    }

    .color-chip__swatch.frame {
      border: 1px solid #ddd
    }

    .color-chip__swatch.light {
      color: #333;
    }

    .color-chip p,
    .color-ramp p {
      margin: 0;
      padding-top: .5rem;
      font-size: .86rem;
      line-height: 1.2;
      color: #777;
    }

    .color-chip__swatch-container {
      position: relative;
      width: 100%;
      min-height: 100px;

      border-radius: 8px;
    }

    .color-chip__similar-colors h4 {
      color: #777;
      margin: 0;
      margin-top: 1em;
      border-top: 1px solid #777;
      padding-top: .5em;
    }

    .color-chip__similar-colors ul {
      margin: 0;
      padding: 0;
    }

    .color-chip__similar-colors li {
      position: relative;
      display: inline-flex;
      align-items: center;
      justify-content: space-between;
      list-style-type: none;
      padding-top: .25em;
      padding-bottom: .25em;
      width: 100%;
    }

    .color-chip__similar-colors li .deltaE {
      display: none;
      position: absolute;
      right: 0;
      color: #777;
      padding: .7em;
      background: white;
      border-radius: 2em;
      border: 1px solid #ddd;
    }

    .color-chip__similar-colors .small-color-chip {
      display: flex;
      align-items: center;
    }

    .color-chip__similar-colors li:hover .deltaE,
    .color-chip__similar-colors li.isActive .deltaE {
      display: block;
    }

    .color-chip__similar-colors .small-color-chip__color {
      display: inline-block;
      min-width: 2em;
      height: 2em;
      border-radius: 2em;
      margin-right: .5em;
    }



    .color-chip__similar-colors {
      width: 100%;
    }


    .checkerboard-bg {
      background-image: linear-gradient(45deg, #777 25%, transparent 25%), linear-gradient(-45deg, #777 25%, transparent 25%), linear-gradient(45deg, transparent 75%, #777 75%), linear-gradient(-45deg, transparent 75%, #777 75%);
      background-size: 20px 20px;
      background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
    }

    .color-ramps {
      display: flex;
      flex-wrap: wrap;
    }

    .color-ramp {
      min-width: 226px;
      margin-left: 20px;
      margin-right: 20px;
      margin-bottom: 20px;
    }

    .color-ramp .checkerboard-bg {
      border-radius: 4px;
      margin-top: 8px;
    }

    .color-ramp__item {
      position: relative;
      border: 1px solid rgba(0, 0, 0, .12);
      border-top-color: transparent;
      color: #fff;
      padding: 10px 15px 11px;
      margin: 0;
      box-sizing: border-box;
      display: flex;
      justify-content: space-between;
      align-items: center;
      min-width: 200px;
    }

    .color-ramp__item:first-of-type {
      border-top-color: rgba(0, 0, 0, .12);
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
    }

    .color-ramp__item:last-of-type {
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
    }

    .color-ramp__item.light {
      color: #333;
    }

    .color-ramp__item .warning-sign {
      line-height: 0;
      font-size: 24px;
      font-weight: bold;
    }

    .color-ramp__item h3,
    .color-ramp__item h4 {
      margin: 0;
      padding: 0;
      overflow-wrap: break-word;
      padding-left: 8px;
      padding-right: 8px;
      border-radius: 2em;
      padding-top: 2px;
      margin-top: -2px;
      padding-bottom: 2px;
    }

    .color-ramp__item h3 {
      font-size: 1rem;
      font-weight: 700;
      margin-left: -8px;
      margin-right: 16px;
    }

    .color-ramp__item h4 {
      font-family: var(--monospace-font);
      font-size: .8rem;
      font-weight: normal;
      margin-left: 16px;
      margin-right: -8px;
    }

    .color-ramp__item:hover .deltaE,
    .color-ramp__item.isActive .deltaE {
      display: block;
    }

    .color-ramp__item .deltaE {
      display: none;
      position: absolute;
      right: 0;
      padding: .7em;

      font-size: 14px;
      font-weight: bold;
      border-radius: 2em;
      border: 1px solid #777;

      background: #333;
      color: #ddd;
    }


    .value-source {
      font-weight: bold;
      font-family: var(--monospace-font);
      overflow-wrap: break-word;
      width: 100%;
      max-width: 320px;
    }

    /* Color Scale Visualization Styles */
    .visualization-container {
      margin: 16px 0;
      padding: 12px;
      background: #f9f9f9;
      border-radius: 6px;
      border: 1px solid #e0e0e0;
    }

    .visualization-container h4 {
      margin: 0 0 8px 0;
      font-size: 14px;
      color: #555;
      font-weight: 600;
    }

    .lightness-chart, .hue-chroma-chart {
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .lightness-chart {
      display: block;
      margin-bottom: 16px;
    }

    .hue-chroma-chart {
      display: block;
    }

    /* Responsive adjustments */
    @media (max-width: 600px) {
      .visualization-container {
        margin: 12px 0;
        padding: 8px;
      }
      
      .lightness-chart {
        width: 100%;
        height: auto;
      }
      
      .hue-chroma-chart {
        width: 100%;
        height: auto;
      }
    }
  </style>
</head>

